<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.shaoxing.repository.SysUserRoleMapper">

	<resultMap id="RM_SysUserRole" type="com.shaoxing.entity.mysql.SysUserRole">
        <result property="roleId" column="role_id"/>
        <result property="uid" column="uid"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		role_id,uid
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="roleId">
    <![CDATA[
        INSERT INTO sys_user_role (
        	role_id ,
        	uid 
        ) VALUES (
        	#{roleId} ,
        	#{uid} 
        )
    ]]>
	</insert>
    
	<update id="update" >
    <![CDATA[
        UPDATE sys_user_role SET
	        uid = #{uid} 
        WHERE 
	        role_id = #{roleId} 
    ]]>
	</update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM sys_user_role WHERE
        role_id = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="RM_SysUserRole">
		SELECT <include refid="columns" />
	    <![CDATA[
		    FROM sys_user_role 
	        WHERE 
		        role_id = #{id} 
	    ]]>
	</select>
	
	<sql id="findPage_where">
		<where>	      				
	       <if test="roleId != null">
				AND role_id = #{roleId}
			</if>
	       <if test="uid != null">
				AND uid = #{uid}
			</if>
		</where>
	</sql>
		
    <select id="count" resultType="long">
        SELECT count(id) FROM sys_user_role 
		<include refid="findPage_where"/>    
    </select>

    <select id="findAll" resultMap="RM_SysUserRole">
    SELECT <include refid="columns"/> FROM sys_user_role where 1=1
    </select>

    <select id="findPage" resultMap="RM_SysUserRole">
    	SELECT <include refid="columns" />
	    FROM sys_user_role 
		<include refid="findPage_where"/>
    </select>

	
</mapper>

